<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Visual_Grafo_Studio">


    <ControlTemplate x:Key="BasicShape1">
        <Grid Width="40" Height="40">
            <Ellipse>
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF77C9FF" Offset="0.99" />
                        <GradientStop Color="#FFF1F1F1" Offset="0.584" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock x:Name="tplTextBlock" Text="0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="BasicShape2">
        <Grid Width="40" Height="40">
            <Ellipse>
                <Ellipse.Fill>
                    <RadialGradientBrush>
                        <GradientStop Color="#FF98FF77" Offset="0.99" />
                        <GradientStop Color="#FFF1F1F1" Offset="0.584" />
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock x:Name="tplTextBlock" Text="0" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>
